local OrionLib = loadstring(game:HttpGet(('https://raw.githubusercontent.com/shlexware/Orion/main/source')))()
local Window = OrionLib:MakeWindow({Name = "Title of the library", HidePremium = false, SaveConfig = true, ConfigFolder = "OrionTest"})

local Tab = Window:MakeTab({
    Name = "Main",
    Icon = "rbxassetid://4483345998",
    PremiumOnly = false
})

--//Global Variables
getgenv().MaxDistance = 50
_G.SilentAim = true
local WhitelistedPlayer = "JumpyXValk"

--//Functions
function GetValidTargets()
    local targets = {}
    local plrtorso = game:GetService("Players").LocalPlayer.Character:FindFirstChild("HumanoidRootPart")
    for _, v in pairs(game:GetService("Players"):GetPlayers()) do
        if v.Character and v ~= game:GetService("Players").LocalPlayer then
            if v.Name == WhitelistedPlayer then
                local torso = v.Character:FindFirstChild("HumanoidRootPart")
                if torso and (torso.Position - plrtorso.Position).magnitude <= getgenv().MaxDistance then
                    table.insert(targets, v)
                end
            end
        end
    end
    return targets
end

Tab:AddToggle({
    Name = "Silent Aim",
    Default = false,
    Callback = function(Value)
        --// Execution
        if _G.SilentAim == false then
            _G.SilentAim = true
            local delay = 0.7 -- Set the desired delay time (in seconds)
            while _G.SilentAim do
                local targets = GetValidTargets()
                for _, Player in ipairs(targets) do
                    local args = {
                        [1] = Player.Character
                    }
                    game:GetService("ReplicatedStorage").References.Comm.Events.ToolAction:FireServer(unpack(args))
                    local A_1 = "rbxassetid://4150159559" local A_2 = 1 local A_3 = Player.Character.HumanoidRootPart local A_4 = true local Event = game:GetService("ReplicatedStorage").References.Utilities.Shared.SFX.Replicate Event:FireServer(A_1, A_2, A_3, A_4)
                end
                wait(delay)
            end
        else
            _G.SilentAim = false
        end
    end
})
